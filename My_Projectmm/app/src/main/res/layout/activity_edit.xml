<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".Activity_Edit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EditText view Page"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Number: "
        android:inputType="number"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/num2"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SecondNumber: "
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
     <TextView
         android:id="@+id/result_view"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="Result: "
         android:layout_gravity="center"
         android:textSize="25dp"
         android:layout_marginTop="20dp"
         />

    <Button
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result Button"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/id_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to imageview"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/id_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to checkbox"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        />
</LinearLayout>