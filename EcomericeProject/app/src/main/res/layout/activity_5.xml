<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_5">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/picture4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pp1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="10dp"
        android:text="Log In"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginStart="140dp"
        android:textColor="#FF7F50"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/pp2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pp1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/pp3"
        android:layout_width="330dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/pp2"
        app:layout_constraintStart_toEndOf="@id/pp2"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="95dp"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/pp4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pp3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:text="password"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/pp5"
        android:layout_width="330dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/pp4"
        app:layout_constraintStart_toEndOf="@id/pp4"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="130dp"

        />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/pp6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pp5"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Remember me"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/pp7"
        android:layout_width="320"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:background="#FF7F50"
        android:text="Log In"
        android:textColor="#FFFFF0"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pp6" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/pp8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pp7"
        app:layout_constraintStart_toStartOf="@id/pp7"
        android:layout_marginTop="10dp"
        android:text="Forgot Password? "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="90"

        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/pp9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pp8"
        app:layout_constraintStart_toStartOf="@id/pp8"
        android:layout_marginTop="10dp"
        android:text="Or "
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="60"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/pp10"
        android:layout_width="320"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="#FF7F50"
        android:text="Log in Using Facebook"
        android:textColor="#FFFFF0"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pp9"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/pp11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100"
        android:layout_marginTop="8dp"
        android:text="Log in using Google"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/pp10" />

    <androidx.appcompat.widget.AppCompatTextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70"
        android:layout_marginTop="20dp"
        android:text="Don`t have account?Sign up"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pp11"
        app:layout_constraintEnd_toEndOf="parent"



        />




</androidx.constraintlayout.widget.ConstraintLayout>