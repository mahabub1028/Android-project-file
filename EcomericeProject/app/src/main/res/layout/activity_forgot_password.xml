<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_password">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="260dp"
        android:layout_height="240dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/forgot_pass_image"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pp1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:text="Forgot Password? "
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"
        />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pp2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pp1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Please enter the email address what"
        android:textSize="16dp"
        android:textColor="#000000"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pp3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="belongs to your profile "
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="#000000"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/pp4"
        android:layout_width="330dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/pp3"

        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="     mahahubalom900@gmail.com"
        android:textSize="18dp"
        android:layout_marginEnd="25dp"
        android:background="#f2f2f2"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/pp8"
        android:layout_width="320"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="#FF7F50"
        android:text="Continue"
        android:textColor="#FFFFF0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@id/pp4" />


</androidx.constraintlayout.widget.ConstraintLayout>